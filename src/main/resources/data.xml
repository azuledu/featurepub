<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="FeatureData" class="es.uva.idelab.featurepub.Process.Data.FeatureDataDAO" />

	<bean id="DBRowMapper" class="es.uva.idelab.featurepub.Process.Data.DBRowMapper" />


	<bean id="LakesPhotoData" class="es.uva.idelab.featurepub.Process.Data.SQLDataDAO">
		<constructor-arg name="dataSource" ref="dataSourceCHD" />
		<constructor-arg name="sql" value="SELECT * FROM LAKE_SEGMENT_PHOTO, PHOTO WHERE LAKE_SEGMENT_PHOTO.LAKE_SEGMENT_FK = ?" />
		<constructor-arg name="rowMapper" ref="DBRowMapper" />
		<constructor-arg name="featureFK" value="SEGMENT_CODE" />		
	</bean>


	<bean id="RiversData" class="es.uva.idelab.featurepub.Process.Data.SQLDataDAO">
		<constructor-arg name="dataSource" ref="dataSourceCHD" />
		<constructor-arg name="sql" value="SELECT NAME FROM RIVER_WATER_BODY WHERE RIVER_WATER_BODY_PK = ?" />
		<constructor-arg name="rowMapper" ref="DBRowMapper" />
		<constructor-arg name="featureFK" value="RIVER_WATER_BODY_FK" />		
	</bean>


</beans>
